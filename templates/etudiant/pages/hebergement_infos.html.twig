	</select>

	<label for="etage">Etage:</label>
	<select class="form-control" name="etage" id="etage">
		{% for etage in etages %}
			<option value="{{etage.id}}" {% if hebergement.lit.chambre.etage.id == etage.id %} selected {% endif %}>{{etage.designation}}</option>
		{% endfor %}
	</select>

	<label for="chambre">Chambre:</label>
	<select class="form-control" name="chambre" id="chambre">
		{% for chambre in chambres %}
			<option value="{{chambre.id}}" {% if hebergement.lit.chambre.id == chambre.id %} selected {% endif %}>{{chambre.designation}} - {{chambre.typeChambre.designation}}</option>
		{% endfor %}
	</select>

	<label for="lit">Lit:</label>
	<select class="form-control" name="lit" id="lit">
		{% for lit in lits %}
			<option value="{{lit.id}}" {% if hebergement.lit.id == lit.id%} selected {% endif %}>{{lit.position}}</option>
		{% endfor %}
	</select>

	<button type="submit" class="btn btn-success mt-4">
		<i class="fas fa-check-circle"></i>Modifier
	</button>
</form>
